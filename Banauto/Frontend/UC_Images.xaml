<UserControl x:Class="Banauto.Frontend.UC_Images"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banauto.Frontend"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid>
        <Image x:Name="imgAuto" HorizontalAlignment="Left" Height="180" Margin="10,10,0,0" VerticalAlignment="Top" Width="280"/>
        <Button x:Name="btnSelectImage" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="280" Margin="10,10,0,0" Height="180" Background="{x:Null}" Click="btnSelectImage_Click"/>

    </Grid>
</UserControl>
